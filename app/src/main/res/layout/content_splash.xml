<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_branding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ic_branding_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_imiconnect_logo" />

    <TextView
        android:id="@+id/branding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_branding_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/branding_title"
        android:textColor="#585858"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/branding_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/branding_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/branding_subtitle"
        android:textColor="#757575"
        android:textSize="20sp" />

</RelativeLayout>

